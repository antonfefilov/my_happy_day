<h1>Corporation "Umbrella" online calendar</h1>

<%= form_tag sessions_path, :class => "form-horizontal" do %>

  <div class="control-group">
    <%= label_tag :email, "Email", :class => "control-label" %>
    <div class="controls">
      <%= email_field_tag :email, params[:email] %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag :password, "Password", :class => "control-label" %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag "Log in", :class => 'btn btn-primary' %>
    or
    <%= link_to "Sign up", new_user_path, :class => 'btn' %>
  </div>

<% end %>
